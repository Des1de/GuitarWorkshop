@page
@model GuitarWorkshopUI.Pages.Constructor.GuitarBuilderModel
@{
    ViewData["Title"] = "Guitar Builder";
}

<h1>Guitar Builder</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="GuitarBuild.BodyShapeId">Body Shape:</label>
        <select asp-for="GuitarBuild.BodyShapeId" asp-items="Model.BodyShapeOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.BodyShapeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.BottomDeckMaterialId">Bottom Deck Material:</label>
        <select asp-for="GuitarBuild.BottomDeckMaterialId" asp-items="Model.BottomDeckMaterialOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.BottomDeckMaterialId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.TopDeckMaterialId">Top Deck Material:</label>
        <select asp-for="GuitarBuild.TopDeckMaterialId" asp-items="Model.TopDeckMaterialOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.TopDeckMaterialId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.NeckShapeId">Neck Shape:</label>
        <select asp-for="GuitarBuild.NeckShapeId" asp-items="Model.NeckShapeOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.NeckShapeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.NeckMaterialId">Neck Material:</label>
        <select asp-for="GuitarBuild.NeckMaterialId" asp-items="Model.NeckMaterialOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.NeckMaterialId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.FingerboardMaterialId">Fingerboard Material:</label>
        <select asp-for="GuitarBuild.FingerboardMaterialId" asp-items="Model.FingerboardMaterialOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.FingerboardMaterialId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.NeckScaleId">Neck Scale:</label>
        <select asp-for="GuitarBuild.NeckScaleId" asp-items="Model.NeckScaleOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.NeckScaleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.FretNubmberTypeId">Fret Number Type:</label>
        <select asp-for="GuitarBuild.FretNubmberTypeId" asp-items="Model.FretNubmberTypeOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.FretNubmberTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.HeadstockStyleId">Headstock Style:</label>
        <select asp-for="GuitarBuild.HeadstockStyleId" asp-items="Model.HeadstockStyleOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.HeadstockStyleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.TuningMachineId">Tuning Machine:</label>
        <select asp-for="GuitarBuild.TuningMachineId" asp-items="Model.TuningMachineOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.TuningMachineId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.ColorId">Color:</label>
        <select asp-for="GuitarBuild.ColorId" asp-items="Model.ColorOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.ColorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.FinishId">Finish:</label>
        <select asp-for="GuitarBuild.FinishId" asp-items="Model.FinishOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.FinishId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuitarBuild.StringId">String Type:</label>
        <select asp-for="GuitarBuild.StringId" asp-items="Model.StringOptions" class="form-control"></select>
        <span asp-validation-for="GuitarBuild.StringId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Build Guitar</button>
</form>
