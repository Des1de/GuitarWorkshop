@page

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@model IndexModel
@{
    ViewData["Title"] = "Guitar Workshop";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Welcome to the Guitar Workshop</h1>

    <div class="text-center mb-5">
        <p class="fs-5">
            At our workshop, we craft custom acoustic guitars tailored to your preferences.
            Select the materials, shape, finish, and components that match your sound and style.
        </p>
        <a class="btn btn-primary btn-lg mt-3" asp-page="/Constructor/GuitarBuilds">Start Your Build</a>
    </div>

    <hr />

    <div class="row mt-5">
        <div class="col-md-6">
            <h4>Contact Information</h4>
            <p><strong>Address:</strong> 123 Harmony Street, Musicville, USA</p>
            <p><strong>Phone:</strong> +1 (555) 123-4567</p>
            <p><strong>Email:</strong> info@guitarworkshop.com</p>
            <p><strong>Working Hours:</strong> Mon–Fri, 9:00 AM – 6:00 PM</p>
        </div>
        <div class="col-md-6">
            <h4>Find Us</h4>
            <div class="ratio ratio-4x3 shadow rounded">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.271300368351!2d-122.41941638468176!3d37.77492977975947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085808e4c7f3b25%3A0x0!2sMusicville%20Guitar%20Workshop!5e0!3m2!1sen!2sus!4v1610000000000"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>
