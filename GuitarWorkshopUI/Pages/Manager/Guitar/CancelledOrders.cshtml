@page
@model GuitarWorkshopUI.Pages.Manager.Guitar.CancelledOrdersModel
@{
    ViewData["Title"] = "Cancelled Orders";
}

<h2 class="text-center mb-4">Cancelled Orders</h2>

@if (!Model.CancelledOrders.Any())
{
    <p class="text-muted text-center">There are no cancelled orders.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped text-center align-middle">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User ID</th>
                    <th>Build ID</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.CancelledOrders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.UserId</td>
                        <td>@order.BuildId</td>
                        <td>@order.OrderDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@order.Price.ToString("C")</td>
                        <td>@order.DeliveryAddress</td>
                        <td>@order.PhoneNumber</td>
                        <td>@order.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
