@page
@model GuitarWorkshopUI.Pages.GuitarParts.Finish.GetAllModel

@{
    ViewData["Title"] = "Finishes";
}

<h1>Finishes</h1>

<p>
    <a asp-page="Create">Create New</a>  <!-- Optional: Link to a Create page -->
</p>

<table class="table">
    <tbody>
        @foreach (var item in Model.Finishes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <div style="display:inline-flex">
                        <a asp-page="./Edit" asp-route-id="@item.FinishId" class="btn btn-sm">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.FinishId">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
