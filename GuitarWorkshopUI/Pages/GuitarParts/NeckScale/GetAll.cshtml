@page
@model GuitarWorkshopUI.Pages.GuitarParts.NeckScale.GetAllModel
@{
    ViewData["Title"] = "Neck Scales";
}

<h1>Neck Scales</h1>

<p>
    <a asp-page="Create">Create New</a>  <!-- Optional: Link to a Create page -->
</p>

<table class="table">
    <tbody>
        @foreach (var item in Model.NeckScales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ScaleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScaleLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <div style="display:inline-flex">
                        <a asp-page="./Edit" asp-route-id="@item.ScaleId" class="btn btn-sm">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.ScaleId">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>